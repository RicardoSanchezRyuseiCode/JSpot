@using System.Configuration
@{
    Layout = null;
}
<html dir="ltr">
    <head>
        <!-- Meta -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- Responsive and information -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="JSpot - RyuseiCode">
        <meta name="author" content="Ricardo Sanchez Romero - RyuseiCode">
        <!-- Title -->
        <title>JSPOT</title>
        <!-- Styles -->
        @Styles.Render("~/Assets/Xtreme/Style")
        @Styles.Render("~/Assets/Ryusei/Style")
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <!-- ============================================================== -->
        <!--                            Preloader                           -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!--        Main wrapper - style you can find in pages.scss         -->
        <!-- ============================================================== -->
        <div id="main-wrapper">
            <!-- ============================================================== -->
            <!--                       Topbar header                            -->
            <!-- ============================================================== -->
            <header class="topbar">
                <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                    <div class="navbar-header">
                        <!-- This is for the sidebar toggle which is visible on mobile only -->
                        <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
                        <!-- ============================================================== -->
                        <!-- Logo -->
                        <!-- ============================================================== -->
                        <a class="navbar-brand" href="index.html">
                            <!-- Logo icon -->
                            <b class="logo-icon">
                                <!--You can put here icon as well // <i class="wi wi-sunset"></i> //-->
                                <!-- Dark Logo icon -->
                                <img src="~/Assets/JSpot/images/icon_small.png" alt="homepage" class="dark-logo" />
                                <!-- Light Logo icon -->
                                <img src="~/Assets/JSpot/images/icon_small.png" alt="homepage" class="light-logo" />
                            </b>
                            <!--End Logo icon -->
                            <!-- Logo text -->
                            <span class="logo-text">
                                <!-- dark Logo text -->
                                <img src="~/Assets/JSpot/images/icon_text_small.png" alt="homepage" class="dark-logo" />
                                <!-- Light Logo text -->
                                <img src="~/Assets/JSpot/images/icon_text_small.png" class="light-logo" alt="homepage" />
                            </span>
                        </a>
                        <!-- ============================================================== -->
                        <!-- End Logo -->
                        <!-- ============================================================== -->
                        <!-- ============================================================== -->
                        <!-- Toggle which is visible on mobile only -->
                        <!-- ============================================================== -->
                        <a class="topbartoggler d-block d-md-none waves-effect waves-light" href="javascript:void(0)" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="ti-more"></i></a>
                    </div>
                    <!-- ============================================================== -->
                    <!-- End Logo -->
                    <!-- ============================================================== -->
                    <div class="navbar-collapse collapse" id="navbarSupportedContent" style="background: linear-gradient(to right,#BB1542 0,#0E215B 100%) !important;">
                        <!-- ============================================================== -->
                        <!-- toggle and nav items -->
                        <!-- ============================================================== -->
                        <ul class="navbar-nav float-left mr-auto">
                            <li class="nav-item d-none d-md-block"><a class="nav-link sidebartoggler waves-effect waves-light" href="javascript:void(0)" data-sidebartype="mini-sidebar"><i class="mdi mdi-menu font-24"></i></a></li>
                        </ul>
                        <!-- ============================================================== -->
                        <!-- Right side toggle and nav items -->
                        <!-- ============================================================== -->
                        <ul class="navbar-nav float-right">

                            <!-- ============================================================== -->
                            <!-- Comment -->
                            <!-- ============================================================== -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle waves-effect waves-dark" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="mdi mdi-bell font-24"></i>

                                </a>
                                <div class="dropdown-menu dropdown-menu-right mailbox animated bounceInDown">
                                    <span class="with-arrow"><span class="bg-primary"></span></span>
                                    <ul class="list-style-none">
                                        <li>
                                            <div class="drop-title bg-primary text-white">
                                                <h4 class="mb-0 mt-1">4 New</h4>
                                                <span class="font-light">Notifications</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="message-center notifications">
                                            </div>
                                        </li>
                                        <li>
                                            <a class="nav-link text-center mb-1" href="javascript:void(0);"> <strong>Check all notifications</strong> <i class="fa fa-angle-right"></i> </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <!-- ============================================================== -->
                            <!-- End Comment -->
                            <!-- ============================================================== -->
                            <!-- ============================================================== -->
                            <!-- User profile and search -->
                            <!-- ============================================================== -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img data-elysium-user-profile-photo src="~/Assets/Xtreme/images/users/1.jpg" alt="user" class="rounded-circle" width="31" style="margin-top: 15px;">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right user-dd animated flipInY">
                                    <span class="with-arrow"><span class="bg-primary"></span></span>
                                    <div class="d-flex no-block align-items-center p-15 bg-primary text-white mb-2">
                                        <div class=""><img data-elysium-user-profile-photo src="~/Assets/Xtreme/images/users/1.jpg" alt="user" class="img-circle" width="60"></div>
                                        <div class="ml-2">
                                            <h4 class="mb-0" data-elysium-user-profile-name></h4>
                                            <p class=" mb-0" data-elysium-user-profile-position></p>
                                        </div>
                                    </div>
                                    <a class="dropdown-item elysium-outside-menu" data-elysium-menu-items-islink href="@string.Format("{0}/Auth/Profile",ConfigurationManager.AppSettings["AppHost"])" data-i18n="[html]Jspot.Home.EditProfileA"></a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="javascript:void(0)" data-elysium-session-logout data-i18n="[html]Jspot.Home.LogoutA"></a>
                                </div>
                            </li>
                            <!-- ============================================================== -->
                            <!-- User profile and search -->
                            <!-- ============================================================== -->
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- ============================================================== -->
            <!--                        End Topbar header                       -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!--                            Left Sidebar                        -->
            <!-- ============================================================== -->
            <aside class="left-sidebar" data-sidebarbg="skin6">
                <div class="scroll-sidebar">
                    <!-- Sidebar navigation-->
                    <nav class="sidebar-nav">
                        <ul id="sidebarnav" data-elysium-menu-items>
                            <!-- User Profile-->
                            <li>
                                <!-- User Profile-->
                                <div class="user-profile d-flex no-block dropdown mt-3">
                                    <div class="user-pic"><img data-elysium-user-profile-photo src="~/Assets/Xtreme/images/users/1.jpg" alt="users" class="rounded-circle" width="40" /></div>
                                    <div class="user-content hide-menu ml-2">
                                        <a href="javascript:void(0)" class="" id="Userdd" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <h5 class="mb-0 user-name font-medium" data-elysium-user-profile-name></h5>
                                            <span class="op-5 user-email" data-elysium-user-profile-position></span>
                                        </a>
                                        @*<div class="dropdown-menu dropdown-menu-right" aria-labelledby="Userdd">
                                            <a class="dropdown-item elysium-outside-menu" data-elysium-menu-items-islink href="@string.Format("{0}/Auth/Profile",ConfigurationManager.AppSettings["AppHost"])" data-i18n="[html]Jspot.Home.EditProfileB"></a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="javascript:void(0)" data-elysium-session-logout data-i18n="[html]Jspot.Home.LogoutB"></a>
                                        </div> *@
                                    </div>
                                </div>
                                <!-- End User Profile-->
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>
            <!-- ============================================================== -->
            <!--                          End Left Sidebar                      -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!--                            Page wrapper                        -->
            <!-- ============================================================== -->
            <div class="page-wrapper">
                <div id="content" class="container-fluid">
                    @RenderBody()
                </div>
                <!-- ============================================================== -->
                <!--                            footer                              -->
                <!-- ============================================================== -->
                <footer class="footer text-center">
                    <a target="_blank" href="https://www.ryuseicode.com">Ryusei Code</a>
                </footer>
                <!-- ============================================================== -->
                <!--                          End footer                            -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!--                        End Page wrapper                        -->
            <!-- ============================================================== -->
        </div>

        <!-- Modal for session -->
        <div class="modal modal-message fade" data-backdrop="static" data-keyboard="false" data-elysium-session-modal>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" data-i18n="Jspot.Home.Session.ModalTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <p data-i18n="Jspot.Home.Session.ModalDescription"></p>
                        <p style="color:#e5603b; font-size: 12px !important" data-elysium-session-error data-i18n="Jspot.Home.Session.ModalLabelError"></p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" data-elysium-session-refresh data-i18n="Jspot.Home.Session.ModalButtonAccept"></button>
                        <button class="btn btn-white" data-elysium-session-logout data-dismiss="modal" data-i18n="Jspot.Home.Session.ModalButtonReject"></button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Base Botton Scripts -->
        @Scripts.Render("~/Assets/Xtreme/Script/BaseBottom")
        <!-- Base URL -->
        <script>
            var AppHost = '@ConfigurationManager.AppSettings["AppHost"]';
            var ApiGateway = '@ConfigurationManager.AppSettings["ApiGateway"]';
        </script>
        <!-- Elysium Script -->
        @Scripts.Render("~/Assets/Elysium/Scripts")
        <!-- I18N -->
        @Scripts.Render("~/Assets/i18n/Scripts")
        <!-- Entry point of application -->
        <script>
            $(document).ready(function () {
                // Initialize Broadcast Channel Global
                Elysium.GlobalObj["BrdcstChGlobal"] = new Elysium.App.Globals.BrdcstChGlobals({});
                Elysium.GlobalObj["BrdcstChGlobal"].Initialize();
                // Initialize Localization Global
                Elysium.GlobalObj["i18nGlobal"] = new Elysium.App.Globals.I18nGlobals({ Event: "click" });
                Elysium.GlobalObj["i18nGlobal"].Initialize();
                // Initialization of validators global
                Elysium.GlobalObj["ValidatorGlobal"] = new Elysium.App.Globals.ValidatorGlobals({});
                Elysium.GlobalObj["ValidatorGlobal"].Initialize();
                // Initialize Session Global
                Elysium.GlobalObj["SessionGlobal"] = new Elysium.App.Globals.SessionGlobals({
                    OnInitializeEnd: function (loadMenu) {
                        // Create menu reference
                        Elysium.GlobalObj["MenuItemsGlobal"] = new Elysium.App.Globals.MenuItemGlobals({
                            OnInitializeEnd: function () {
                                Elysium.GlobalObj["i18nGlobal"].FullRefresh(function () {
                                    // User profile
                                    $("[data-elysium-user-profile-configuration]").click(function () {
                                        Elysium.GlobalObj["MenuItemsGlobal"].Load("/Auth/UserDataProfile");
                                    });
                                });
                            }
                        });
                        // Initialize Menu Global
                        Elysium.GlobalObj["MenuItemsGlobal"].Initialize();
                    }
                });
                Elysium.GlobalObj["SessionGlobal"].Initialize();
            });
        </script>
    </body>
</html>
